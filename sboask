#!/bin/bash

. /etc/sboutils.conf

SBO_INFO="no"
SBO_DEPS="no"
SBO_DEPENDENTS="no"
SBO_FIND="no"
SBO_KEY="no"
SBO_ISINST="no"

is_input_empty(){
	if [ -z "$1" ]; then
		echo "Input is empty. For help, use `basename $0` help."
		exit 1
	fi
}

check_location(){
	LOCATION=$(cat $REPO/SLACKBUILDS.TXT | grep "/${1}$" | grep LOCATION | sed "s|SLACKBUILD LOCATION: ./||")
	SEARCHES=$(cat $REPO/SLACKBUILDS.TXT | grep -i "${1}" | grep LOCATION | sed "s|SLACKBUILD LOCATION: ./||")
	
	LOCATION_array=( $LOCATION )
	SEARCHES_array=( $SEARCHES )
}

search_not_found(){
	if [ "${#LOCATION_array[@]}" = "0" ] ; then
		echo "$1 not found on SlackBuilds.org."
		exit 1
	fi
}

location_search(){
	for i in ${SEARCHES_array[@]}; do
		nam=$(basename $i)
		SHORTDESC=$(cat $REPO/$i/slack-desc | grep "${nam}: ${nam}" | awk -F'[()]' '{print $2}' )
		echo -e "$i ($SHORTDESC)"
	done
}

keywords_search(){
	read -r -d '' -a KEYWORDS_ARRAY < <(grep "${1}" $REPO/TAGS.txt | awk '{print $1}' | sed "s|:||g")
	for k in ${KEYWORDS_ARRAY[@]}; do
		key_array+=( "$(cat $REPO/SLACKBUILDS.TXT | grep "/${k}$" | grep LOCATION | sed "s|SLACKBUILD LOCATION: ./||") " )
	done
	
	# sort by category
	IFS=$'\n' key_sorted=($(sort <<<"${key_array[*]}"))
	unset IFS
	
	for a in ${key_sorted[@]}; do
		nam=$(basename $a)
		SHORTDESC=$(cat $REPO/$a/slack-desc | grep "${nam}: ${nam}" | awk -F'[()]' '{print $2}' )
		echo "$a ($SHORTDESC)"
	done
}

display_info(){
	. $REPO/$LOCATION/$1.info
	SHORTDESC=$(cat $REPO/$LOCATION/slack-desc | grep "${1}: ${1}" | sed "s|${1}: ||")
	CATEGORY=$(echo "$LOCATION" | sed "s:/$PRGNAM::")
	keywords=$(grep -i -w "${1}:" $REPO/TAGS.txt | sed "s|${1}: ||g" | sed "s|${1}:||g" | sed "s|,|, |g")
	echo ""
	echo "$SHORTDESC"
	echo "Version:  $VERSION"
	echo "Category: $CATEGORY"
	echo "Homepage: $HOMEPAGE"
	echo ""
	cat $REPO/$LOCATION/README
	echo ""
	echo "Keywords: $keywords"
	echo ""
}

display_searched(){
	installed=$(find /var/lib/pkgtools/packages/ -name "${1}-*")
	installed_array=( $installed )
	if [ ! -z "$installed" ]; then
		for i in ${installed_array[@]}; do
			pkg+=$(echo "`basename ${i%-*-*-*}` ")
		done

		pkg_array=( $pkg )
		if [[ " ${pkg_array[*]} " =~ " ${1} " ]]; then
			echo "[i] $1"
		elif [[ ! " ${pkg_array[*]} " =~ " ${1} " ]]; then
			echo "[ ] $1"
		fi
	elif [ -z "$installed" ]; then
		echo "[ ] $1"
	fi
}

display_requires(){
	requires_array=( $REQUIRES )

	for d in ${requires_array[@]}; do
		pkg=""
  
		# check if dependency ($d) is among installed pkgs
		installed=$(find /var/lib/pkgtools/packages/ -name "${d}-*" )
		installed_array=( $installed )
		if [ ! -z "$installed" ]; then
			for i in ${installed_array[@]}; do
				pkg+=$(echo "`basename ${i%-*-*-*}` ")
			done

			pkg_array=( $pkg )
			if [[ " ${pkg_array[*]} " =~ " ${d} " ]]; then
				echo "[i] $d"
			elif [[ ! " ${pkg_array[*]} " =~ " ${d} " ]]; then
				echo "[ ] $d"
			fi
		elif [ -z "$installed" ]; then
			echo "[ ] $d"
		fi
	done
}

hoorex_array(){
	if [ "$2" = "DEPS" ]; then
		hoorex=$(hoorex -r "$1")
	else
		hoorex=$(hoorex "$1")
	fi
		
	if [ -z "$hoorex" ]; then
		echo "$1 not found at SlackBuilds.org"
		exit 1
	fi

	hoorex_array=( $hoorex )
}

dependencies_title(){
	echo "--- status and dependencies: ([i] installed, [ ] not installed)"
}

hoorex_output(){
	for d in ${hoorex_array[@]}; do
		pkg=""
  
		# check if dependency ($d) is among installed pkgs
		installed=$(find /var/lib/pkgtools/packages/ -name "${d}-*" )
		installed_array=( $installed )
  
		if [ ! -z "$installed" ]; then
			for i in ${installed_array[@]}; do
			# Name can be tricky, think of <lignome> and <libgnome-keyring>...
			# So collect here all names that matched the search, removing the
			# full path and trimming the stuff separated by the last 3 dashes
			# in the package name.
				pkg+=$(echo "`basename ${i%-*-*-*}` ")
			done
			
			pkg_array=( $pkg )
    
			# search if array contains element or not
			# https://stackoverflow.com/a/15394738
			if [[ " ${pkg_array[*]} " =~ " ${d} " ]]; then
				echo "[i] $d"
			elif [[ ! " ${pkg_array[*]} " =~ " ${d} " ]]; then
				echo "[ ] $d"
			fi
		elif [ -z "$installed" ]; then
			echo "[ ] $d"
		fi
	done
}

helper() {
	echo "Usage: `basename $0` [task] SlackBuild"
	echo "Tasks:"
	echo "  info           display information about SlackBuild"
	echo "  isinst         show if a package is installed"
	echo "  dep            display dependencies chain for a SlackBuild"
	echo "  dependent      display what depends on a SlackBuild"
	echo "  find|search    search for a SlackBuild by name"
	echo "  key            search by keyword"
	echo "  help           display this help message"
}

options(){
	case $1 in
		info)
			SBO_INFO="yes"
		;;
		isinst)
			SBO_ISINST="yes"
		;;
		dep)
			SBO_DEPS="yes"
		;;
		dependent)
			SBO_DEPENDENTS="yes"
		;;
		find|search)
			SBO_FIND="yes"
		;;
		key)
			SBO_KEY="yes"
		;;
		help)
			helper
			exit 0
		;;
		*)
			echo "No task or unknown task $1"
			exit 1
		;;
  	esac

}

main(){
	options "$1" "$2"
	is_input_empty "$2"
	
	if [ "$SBO_ISINST" = "yes" ] && [ ! -z "$2" ]; then
		display_searched "$2"
		exit 0
	fi
	
	check_location "$2"
		
	# $2 refers to position, e.g.: sboask info $2 (aka slackbuild),
	# but comes first after the function, so it is referred as $1
	# inside the corresponding functions! A note to my stupid self.
	if [ "$SBO_INFO" = "yes" ] && [ ! -z "$2" ]; then
		search_not_found "$2"
		display_info "$2"
		display_searched "$2"
		dependencies_title
		display_requires "$2"
		exit 0
	fi

	if [ "$SBO_FIND" = "yes" ] && [ ! -z "$2" ]; then
		search_not_found "$2"
		location_search
		exit 0
	fi
	if [ "$SBO_KEY" = "yes" ] && [ ! -z "$2" ]; then
		keywords_search "$2"
		exit 0
	fi
	if [ "$SBO_DEPS" = "yes" ] && [ ! -z "$2" ]; then
		search_not_found "$2"
		hoorex_array "$2" DEPS
		dependencies_title
		hoorex_output
		exit 0
	fi
	if [ "$SBO_DEPENDENTS" = "yes" ] && [ ! -z "$2" ]; then
		search_not_found "$2"
		hoorex_array "$2" DEPENDENTS
		dependencies_title
		hoorex_output
		exit 0
	fi
	exit 0
}

main "$1" "$2"

# End of file
